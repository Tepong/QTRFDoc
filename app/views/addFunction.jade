html
  head
    // menu
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='../../../css/index1.css', rel='stylesheet')
    //- link(href='../../../css/AddEditPCSS.css', rel='stylesheet')  
    link(href='../../../css/main.css', rel='stylesheet')  
    link(href='../../../css/editFunction.css', rel='stylesheet')
    script(src='../../../js/jquery.js', type='text/javascript')
    script(src='script.js')    
    script(type='text/javascript', src='../../../js/AddDelParam.js')
    title :: Automate Document ::

  body(bgcolor='#D8D8D8')        
      table#IndexTable(width='1000', border='0', align='center')
        tr#HeaderPart
          td(colspan='2')
            div(align='center')
              img#HeaderImg(src='../../../images/banner.jpg', width='1000', height='250', bgcolor='#FFFFFF')
        // Row #2 .... Body+TaMenu        
        tr#BodyPart
          td(width='1000', bgcolor='#FFFFFF')
            div(align='center')
              // Row #2.1 .... TaMenu
              table#Menubar(width='800', border='0', align='center')
                // Table Tab Menu
                tr
                  td
                    // Table Tab Menu
                    table(border='0', align='center', width='1000')
                      tr
                        td(align='center')
                          #cssmenu
                            ul#MainMenu
                              li#HomeMenu
                                a#HomeMenuLink(href='../')
                                  span HOME
                              li.active.has-sub#ProjectListMenu
                                a#ProjectListMenuLink(href='#')
                                  span PROJECT
                                // Project Name
                                ul#ProjectMenu
                                  li.has-sub#ProjectNameMenu
                                    a#ProjectNameMenuLink(href='#')
                                      span SUPERSCREEN
                                    // Group Function SuperScreen
                                    ul#ActionMenu
                                      li.has-sub#ActionName
                                        a#ActionNameLink(href='#')
                                          span ACTION
                                        ul#ActionNameList
                                          each fn in datatoview
                                           case fn.projname
                                            when "SUPERSCREEN"
                                              case fn.funcgroup
                                                when "ACTION"
                                                  li(id='ActionMenu_'+fn.funcname)
                                                  a(id='ActionMenuLink_'+fn.funcname)(href='/FnView/#{fn.funcname}') #{fn.funcname}
                                      li.has-sub#VerifyName
                                        a(href='#')#VerifyNameLink
                                          span VERIFY
                                        ul#VerifyNameList
                                          each fn in datatoview
                                           case fn.projname
                                            when "SUPERSCREEN"
                                              case fn.funcgroup
                                                when "VERIFY"
                                                  li(id='VerifyMenu_'+fn.funcname)
                                                  a(id='VerifyMenuLink_'+fn.funcname)(href='/FnView/#{fn.funcname}') #{fn.funcname}          
                                  
                                      li.has-sub#UtilityName
                                        a#UtilityNameLink(href='#')
                                          span UTILITY
                                        ul#UtilityNameList
                                          each fn in datatoview
                                           case fn.projname
                                            when "SUPERSCREEN"
                                              case fn.funcgroup
                                                when "UTILITY"
                                                  li(id='UtilityMenu_'+fn.funcname)
                                                  a(id='UtilityMenuLink_'+fn.funcname)(href='/FnView/#{fn.funcname}') #{fn.funcname}                                
                              li#About
                                a#AboutLink(href='#')
                                  span About
                              li.last#CONTACT
                                a#CONTACTLink(href='#')
                                  span Contact
              // Row #2.2 .... Body
              .MaxBoderwidth Add Function
              br
              form(method='POST', id='formAddFn',enctype='application/json' ,action='/addFunc/')
                table#tb1
                  tr
                    td Project Name
                    td
                      select       
                         each pn in allProj
                            option #{pn}
                  tr
                    td Function Name
                    td
                      input(type='text', size='80%', name='funcname', id='txt_Name_funcName') 
                  tr
                    td Function Description
                    td
                      input(type='text', size='80%', name='funcdesc', value='', id='txt_Description_funcName')
                  tr
                    td Function Group
                    td                      
                      select(name='funcgroup')
                        option(value='-', disabled='true') --------------
                        option(value='ACTION') ACTION
                        option(value='VERIFY') VERIFY
                        option(value='UTILITY') UTILITY

                br
                input(id='hiddenPj',type='hidden',name='projname',value='SUPERSCREEN')
                
                input(id='btnAddParameter', type='button', value='Add Parameter', onclick="addRow('tb2')")
                input(id='btnDeleteRow', type='button', value='Delete Row', onclick="deleteRow('tb2')")
                table#tb2
                  tr
                    th Delete
                    th Parameter Name
                    th Description
                    th Require Field
                    th Default Value                                     

                  tr#trParamList
                    td#tdCol_Delete
                      input#ParamDelete1(type='checkbox', name='chk')
                    td#tdCol_ParameterName
                      input#ParamName1(type='text', name='params[1][paramname]')
                    td#tdCol_Description
                      input#ParamDesc1(type='text', name='params[1][paramdesc]')
                    td#tdCol_RequireField
                      input#ParamReq1(type='checkbox', name='params[1][paramrequire]')
                      | Yes
                    td#tdCol_DefaultValue
                      input#DefValue1(type='text', name='params[1][paramdefaultvalue]')
                br
                table#tb3
                  tr
                    td#td_btnSave
                      input#btnSave(type='Submit', value='Save', size='50%')
                    td#td_btnCancel
                      input(type='button', value='Cancel', onclick("window.open('FnView/#{datatoview.funcname}')"))
                  br

      // #FOOTER
      tr#FooterPart
        td(colspan='2')
          div(align='center')
            center
              img#FooterImg(src='../images/footer.jpg', width='1010', height='100')